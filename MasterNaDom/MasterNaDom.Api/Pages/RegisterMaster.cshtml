@page
@model MasterNaDom.Api.Pages.RegisterMasterModel
@{
    ViewData["Title"] = "Стать мастером";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Регистрация мастера</h2>
        
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success">@Model.Message</div>
        }

        <form method="post">
            <div class="mb-3"><input asp-for="Input.Email" class="form-control" placeholder="Email" required /></div>
            <div class="mb-3"><input asp-for="Input.Password" type="password" class="form-control" placeholder="Пароль (минимум 6 символов)" required /></div>
            <div class="mb-3"><input asp-for="Input.FullName" class="form-control" placeholder="ФИО" required /></div>
            <div class="mb-3"><input asp-for="Input.Category" class="form-control" placeholder="Специальность" required /></div>
            <div class="mb-3"><input asp-for="Input.HourlyRate" type="number" class="form-control" placeholder="Цена за час" required /></div>
            
            <button type="submit" class="btn btn-success btn-lg w-100">Зарегистрироваться</button>
        </form>
    </div>
</div>